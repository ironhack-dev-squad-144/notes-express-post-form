<h1>Login</h1>

{{!-- Redirect to "POST /login"  --}}
<form action="/login" method="post">
  {{!-- Define a req.body.username --}}
  Username: <input type="text" name="username">
  <br>

  {{!-- Define a req.body.password --}}
  Password: <input type="password" name="password">
  <br>

  <button>Login</button>
</form>

{{#if message}}
  <p>Error: {{message}}</p>
{{/if}}